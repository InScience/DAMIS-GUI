{% extends "@BaseUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    {% include "@BaseUser/messages.html.twig" ignore missing %}
    
    {% if app.user is null %}
        <form class="form-signin" role="form" action="{{ path("fos_user_security_check") }}" method="post">
            <h1>{{ 'security.login.submit'|trans }}</h1>
            
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="{{ 'security.login.username'|trans }}" autofocus/>
            <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="{{ 'security.login.password'|trans }}"/>
            
            <label for="remember_me" class="checkbox">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans }}
            </label>
            
            <button class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
            <a class="btn btn-sm btn-link" href="{{ path('fos_user_resetting_request') }}">{{ 'resetting.forgot'|trans }}</a>
        </form>
    {% else %}
        <p>
            <b>{{ 'If you want to autentificate, please use MIDAS login'|trans }}</b>
        </p>
    {% endif %}
{% endblock %}