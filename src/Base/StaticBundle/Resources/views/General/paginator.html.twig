{% if pageCount > 1 %}
    <ul class="pagination">
        {% if previous is defined %}
            <li><a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&laquo;</a></li>
        {% else %}
            <li class="disabled"><a href="{{ path(route, query|merge({(pageParameterName): 1})) }}">&laquo;</a></li>
        {% endif %}

        {% if startPage > 1 %}
            <li><a href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a></li>
            {% if startPage == 3 %}
                <li><a href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a></li>
            {% elseif startPage != 2 %}
                <li> <span>&hellip;</span>
            {% endif %}
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <li><a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a></li>
            {% else %}
                <li class="active"><a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a></li>
            {% endif %}
        {% endfor %}

        {% if pageCount > endPage %}
            {% if pageCount > (endPage + 1) %}
                {% if pageCount > (endPage + 2) %}
                    <span>&hellip;</span>
                {% else %}
                    <li> <a href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ pageCount -1 }}</a></li>
                {% endif %}
            {% endif %}
            <li><a href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a></li>
        {% endif %}

        {% if next is defined %}
            <li ><a href="{{ path(route, query|merge({(pageParameterName): next})) }}">&raquo;</a>
        {% else %}
            <li class="disabled"><a href="{{ path(route, query|merge({(pageParameterName): endPage})) }}">&raquo;</a>
        {% endif %}
    </ul>
{% endif %}
