{% block body %}
    {% if file != null %}
    <div class="message">
        {{'Dataset used in the experiment' | trans({}, 'DatasetsBundle') }}: <a target="_blank" href="{{ file.filePath }}">{{ file.datasetTitle }}</a>
    </div>

    <button type="button" class="toggle-btn show btn">{{'New file' | trans({}, 'DatasetsBundle') }}</button>
    {% endif %}

<div class="toggle-section" style="width:450px; {% if file != null %} display:none {%endif%}" >
    <div class="col-lg-12" style="margin-top: 35px;">
        <form role="form" id="createDataset" method="post" {{ form_enctype(form) }} novalidate>
            <div class="form-group">
                {{ form_label(form.datasetTitle) }}
                {{ form_widget(form.datasetTitle) }}
                {{ form_errors(form.datasetTitle) }}
            </div>
            <div class="form-group">

                {{ form_label(form.file) }}
                <div class="fileupload fileupload-new" data-provides="fileupload">
                    <div class="input-group">
                        <div class="form-control uneditable-input"><i class="icon-file fileupload-exists"></i>
                            <span class="fileupload-preview"></span>
                        </div>
                        <div class="input-group-btn">
                            <a class="btn btn-primary btn-file">
                                <span class="fileupload-new">{{ 'Select file' | trans({}, 'DatasetsBundle') }}</span>
                                <span class="fileupload-exists">{{ 'Change' | trans({}, 'DatasetsBundle') }}</span>
                                {{ form_widget(form.file) }}</a>
                            <a href="#" class="btn btn-primary fileupload-exists" data-dismiss="fileupload">{{ 'Remove' | trans({}, 'DatasetsBundle') }}</a>
                        </div>
                    </div>
                </div>
                {{ form_errors(form.file) }}
            </div>
            <div class="form-group">
                {{ form_label(form.datasetDescription) }}
                {{ form_widget(form.datasetDescription) }}
                {{ form_errors(form.datasetDescription) }}
            </div>
            {% if file != null %}
            <input id="id_file_path" type="hidden" value="/media/demo/datasets/asdasd.arff" name="file_path">
            {% endif %}
        </form>
    </div>
</div>
{% endblock %}
