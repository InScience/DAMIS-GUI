{% block body %}
    <div class="col-lg-12">
        <form method="POST">
            <input type="hidden" name="params" id="params" value="{{ response }}" />
            <p>
                {{ 'Specify the parameters of the algorithm' | trans({}, 'ExperimentBundle') }}
            </p>
            <div class="form-group component-form-margin">
                {{ form_label(form.reshufleObjects) }}
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_widget(form.reshufleObjects) }}
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.reshufleObjects) }}
            </div>
            <div class="form-group col-md-12 component-form-margin" style="margin-bottom: 20px;">
                {{ 'Set splitting to files parameter values' | trans({}, 'ExperimentBundle') }}
            </div>
            <div class="form-group component-form-margin">
                {{ form_label(form.firstSubsetPerc) }}
                <div class="col-md-3 component-form-margin">
                {{ form_widget(form.firstSubsetPerc) }}
                </div>
                <div class="col-sm-1" style="margin-left:-25px;">%</div>
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.firstSubsetPerc) }}
            </div>
            <div class="form-group component-form-margin">
                {{ form_label(form.secondSubsetPerc) }}
                <div class="col-md-3 component-form-margin">
                {{ form_widget(form.secondSubsetPerc) }}
                </div>
                <div class="col-sm-1" style="margin-left:-25px;">%</div>
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.secondSubsetPerc) }}
            </div>
            {{ form_widget(form._token) }}
        </form>
    </div>
    <script>
        $("input[name='splitdata_type[firstSubsetPerc]']").change(function(){
            $("input[name='splitdata_type[secondSubsetPerc]']:visible").val(100 - $(this).val());
        })
    </script>
{% endblock %}