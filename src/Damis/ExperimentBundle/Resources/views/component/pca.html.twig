{% block body %}
    <div class="col-lg-12">
        <form method="POST">
            <input type="hidden" name="params" id="params" value="{{ response }}" />
            <p>
                {{ 'Specify the parameters of the algorithm' | trans({}, 'ExperimentBundle') }}
            </p>
            <div class="form-group component-form-margin">
                {{ form_label(form.projType) }}
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_widget(form.projType) }}
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.projType) }}
            </div>
            <div class="form-group component-form-margin">
                {{ form_label(form.d) }}
                <div class="col-md-3 component-form-margin">
                {{ form_widget(form.d) }}
                </div>
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.d) }}
            </div>
            <div class="col-md-12">
                {{ "Fields marked with <span style='color:red;'>*</span> are mandatory"|trans({}, 'ExperimentBundle')|raw }}
            </div>
            {{ form_widget(form._token) }}
        </form>
    </div>
    <script>
        $('#experiment-form').keypress(function(event){
            if (event.keyCode == 10 || event.keyCode == 13)
                event.preventDefault();
        });
    </script>
{% endblock %}