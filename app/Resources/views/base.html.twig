<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="lt" lang="lt">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
        <meta http-equiv="content-language" content="lt"/>

        <title>{% block title %}DAMIS{% endblock %}</title>

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        {% block stylesheets %}
            {% if app.environment == "prod" %}
                <link href="{{ asset('/css/smoothness/jquery-ui-1.10.4.custom.min.css') }}" rel="stylesheet"/>
                <link href="{{ asset('/css/bootstrap.min.css') }}" rel="stylesheet"/>
                <link href="{{ asset('/css/bootstrap-theme.min.css') }}" rel="stylesheet"/>
            {% else %}
                <link href="{{ asset('/css/smoothness/jquery-ui-1.10.4.custom.css') }}" rel="stylesheet"/>
                <link href="{{ asset('/css/bootstrap.css') }}" rel="stylesheet"/>
                <link href="{{ asset('/css/bootstrap-theme.css') }}" rel="stylesheet"/>
            {% endif %}
            <link href="{{ asset('/css/styles.css?v=140305') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        {% block body %}
        {% endblock %}

        {% block javascripts %}
            {% if app.environment == "prod" %}
                <script src="{{ asset('/js/jquery-1.11.0.min.js') }}" type="text/javascript"></script>
                <script src="{{ asset('js/typeahead.bundle.min.js?v=0.10.1') }}" type="text/javascript"></script>
                <script src="{{ asset('js/jquery-ui-1.10.4.custom.min.js') }}" type="text/javascript"></script>
                <script src="{{ asset('js/bootstrap.min.js') }}" type="text/javascript"></script>
            {% else %}
                <script src="{{ asset('/js/jquery-1.11.0.js') }}" type="text/javascript"></script>
                <script src="{{ asset('js/typeahead.bundle.js?v=0.10.1') }}" type="text/javascript"></script>
                <script src="{{ asset('js/jquery-ui-1.10.4.custom.js') }}" type="text/javascript"></script>
                <script src="{{ asset('js/bootstrap.js') }}" type="text/javascript"></script>
            {% endif %}
            <script src="{{ asset('js/hogan-2.0.0.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}" type="text/javascript"></script>
            <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
